<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopulationGenetics.Client"
        xmlns:Properties="clr-namespace:PopulationGenetics.Client.Properties" xmlns:Common="clr-namespace:PopulationGenetics.Common;assembly=PopulationGenetics.Common" x:Class="PopulationGenetics.Client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="geneGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
        <Label Width="100" Height="25" Margin="208,15.496,209,147" Grid.Row="1">Individual</Label>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Content="Individual" HorizontalAlignment="Center"></Label>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="processTurn" Content="Process Turn" Width="100" Height="25" Grid.Row="1" HorizontalAlignment="Right" Margin="10" Click="processTurn_Click"/>
            <Button x:Name="cleanWorld" Content="Clean World" Width="100" Height="25" Grid.Row="1" HorizontalAlignment="Right" Margin="10" Click="cleanWorld_Click"/>
            <Button x:Name="populateWorld" Content="Populate World" Width="100" Height="25" Grid.Row="1" HorizontalAlignment="Right" Margin="10" Click="populateWorld_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
